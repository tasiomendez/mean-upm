{

  "manifest_version": 2,
  "name": "Calculadora Nota Media UPM",
  "version": "1.2.2",

  "description": "Calcula la nota media y realiza estadísticas sobre el expediente en la página oficial de la Universidad Politécnica de Madrid",

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    "html/template.*",
    "icons/*.svg",
    "scripts/*.js",
    "statistics/index.html",
    "statistics/modules/*.html"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icons/icon@black_16.png",
      "32": "icons/icon@black_32.png",
      "48": "icons/icon@black_48.png",
      "128": "icons/icon@black_128.png"
    }
  },

  "icons": {
    "16": "icons/icon@black_16.png",
    "32": "icons/icon@black_32.png",
    "48": "icons/icon@black_48.png",
    "128": "icons/icon@black_128.png"
  }

}
