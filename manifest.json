{

  "manifest_version": 2,
  "name": "Calculadora Nota Media UPM",
  "version": "1.0",

  "description": "Calcula la nota media y realiza estadísticas sobre el expediente en la página oficial de la Universidad Politécnica de Madrid",

  "permissions": [
    "activeTab"
  ],

  "web_accessible_resources": [
    "average.html",
    "statistics/index.html",
    "statistics/modules/*.html",
    "icons/*.svg",
    "resources/*.js"
  ],

  "browser_action": {
    "browser_style": true,
    "default_popup": "menu/menu.html",
    "default_icon": {
      "16": "icons/icon@black.svg",
      "32": "icons/icon@black.svg"
    }
  }

}
